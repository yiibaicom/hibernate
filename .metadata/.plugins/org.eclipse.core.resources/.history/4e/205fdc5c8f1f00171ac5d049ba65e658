   <aop:config>
      <aop:aspect id="log" ref="logging">
         <aop:pointcut id="selectAll" 
         expression="execution(* com.yiibai.*.*(..))"/>
         <aop:after-returning pointcut-ref="selectAll" method="afterReturningAdvice" returning="retVal"/>         
